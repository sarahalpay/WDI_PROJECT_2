<div class="container">
  <h1><%= brand.name %></h1>
  <div class="row">
    <div class="col text-center">
      <img class="img-thumbnail img-fluid brand-image" src="<%= brand.mainimage %>"
      alt="<%= brand.name %>">
      <div class="button-column">
        <% if(locals.isAuthenticated) { %>
          <form class="favourite-form" method="POST" action="/brands/<%= brand.id %>/favorite" class="favorite">
          <button>
          <% if(locals.user.hasFavorited(brand)) { %>
            <i class="fa fa-heart"></i>
            <% } else { %>
              <i class="fa fa-heart-o"></i>
              <% } %>
              </button>
              </form>
              <button><a href="https://www.facebook.com/"><i class="fa fa-facebook" aria-hidden="true"></i></a></button>
              <button><a href="https://www.pinterest.co.uk/"<i class="fa fa-pinterest" aria-hidden="true"></a></i></button>
              <button><a href="https://www.twitter.com/"><i class="fa fa-twitter" aria-hidden="true"></i></a></button>
              <% } %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 offset-md-4">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <% brand.images.forEach((image, i) => { %>
                  <% if (i === 0) { %>
                    <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="active"></li>
                  <% } else { %>
                    <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
                  <% } %>
                <% }); %>
              </ol>
              <div class="carousel-inner">
                <% brand.images.forEach((image, i) => { %>
                  <% if (i === 0) { %>
                    <div class="carousel-item active">
                      <img class="d-block w-100" src="<%= image.url %>">
                    </div>
                  <% } else { %>
                    <div class="carousel-item">
                      <img class="d-block w-100" src="<%= image.url %>">
                    </div>
                  <% }; %>
                <% }); %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex align-items-center justify-content-center">
        <a class="btn btn-secondary" href="/brands/<%= brand._id %>/edit" role="button">Edit</a>
        <form action="/brands/<%= brand._id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE"/>
          <button class="btn btn-secondary" >Delete</button>
        </form>
        <a class="btn btn-secondary" href="/categories/<%= brand.category.id %>" role="button">Go Back</a>
      </div>
